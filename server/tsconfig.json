{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      { "name": "next" }
    ],
    "paths": {
      "~/*": ["./src/*"]
    },
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "webpack.config.js"
  ]
}
